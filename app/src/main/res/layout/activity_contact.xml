<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.im.abesit.contact"
    android:background="@drawable/abes">
    <Button
        android:id="@+id/buttonCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0120-2840413"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="ABES Institue of Technology"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:layout_above="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"

        android:src="@drawable/building"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Campus 2, 19th Km. Stone, NH-24, Vijay Nagar, Ghaziabad Uttar Pradesh 201009"
        android:id="@+id/textView2"
        android:textColor="@color/abc_primary_text_material_light"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_above="@+id/buttonCall"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/textView2"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:src="@drawable/location" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:src="@android:drawable/ic_menu_call"
        android:layout_alignTop="@+id/buttonCall"
        android:layout_toLeftOf="@+id/buttonCall"
        android:layout_toStartOf="@+id/buttonCall" />

    <Button
        android:id="@+id/sendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="helpdesk@abesit.in"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/imageView4"
        android:src="@drawable/email"
        android:layout_below="@+id/imageView3"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

</RelativeLayout>
