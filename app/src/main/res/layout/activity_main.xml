<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.im.abesit.MainActivity"
    android:background="@drawable/abes">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABESIT"
        android:id="@+id/T"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />


    <Button
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:text="notice"
        android:id="@+id/b1"
        android:onClick="browser1"
        android:layout_above="@+id/b7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY"
        android:id="@+id/b2"
        android:layout_alignBaseline="@+id/b3"
        android:layout_alignBottom="@+id/b3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:text="moodle"
        android:id="@+id/b3"
        android:layout_below="@+id/b6"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:id="@+id/b4"
        android:layout_below="@+id/b9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:id="@+id/b5"
        android:layout_below="@+id/b4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:text="ACADEMIC CALENDER"
        android:id="@+id/b6"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:text="PLACEMENT"
        android:id="@+id/b7"
        android:layout_above="@+id/b6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:text="CAMPUS"
        android:id="@+id/b8"
        android:layout_above="@+id/b1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:text="MAPS/DIRECTION"
        android:id="@+id/b9"
        android:layout_below="@+id/b2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>